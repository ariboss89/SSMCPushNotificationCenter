@{
    /**/
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SSMCPushNotificationCenter.Models.tb_notification

<div class="container" style="margin-top:20px">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();


        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">

                    <div class="form-group">
                        @Html.HiddenFor(model => model.Id)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { Id = "title", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message, new { Id = "message", rows = "5", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <img class="img-responsive" src="img_chania.jpg" alt="Chania">
                        @Html.ValidationMessageFor(m => m.Image, "", new { @style = "color:red" })
                    </div>
                    <div class="form-horizontal">
                        <button type="submit" class="btn btn-primary" id="btnPush" value="Post" asp-controller="Post">Upload An Image</button>
                        <button type="submit" class="btn btn-primary" id="btnPush" value="Post" asp-controller="Post">Push Notification</button>
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    }
</div>
